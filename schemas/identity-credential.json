{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://schema.aurapass.xyz/identity-v1.jsonld"
    },
    "version": "1.0.0",
    "type": "AuraIdentityCredential"
  },
  "title": "Aura Identity Credential",
  "description": "Proof of verified identity for Aura Protocol users",
  "type": "object",
  "required": ["id", "type", "credentialSubject"],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "array",
      "items": {"type": "string"}
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "walletAddress", "verificationType"],
      "properties": {
        "id": {
          "type": "string"
        },
        "walletAddress": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$"
        },
        "verificationType": {
          "type": "string",
          "enum": ["civic", "worldcoin", "polygon_id"]
        },
        "pohScore": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100
        },
        "verifiedAt": {
          "type": "integer"
        }
      }
    }
  }
}
