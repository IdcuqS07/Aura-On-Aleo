{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://schema.aurapass.xyz/credit-v1.jsonld"
    },
    "version": "1.0.0",
    "type": "AuraCreditScoreCredential"
  },
  "title": "Aura Credit Score Credential",
  "description": "Credit score attestation for Aura Protocol users",
  "type": "object",
  "required": ["id", "type", "credentialSubject"],
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "array",
      "items": {"type": "string"}
    },
    "credentialSubject": {
      "type": "object",
      "required": ["id", "creditScore", "issuedAt"],
      "properties": {
        "id": {
          "type": "string"
        },
        "creditScore": {
          "type": "integer",
          "minimum": 0,
          "maximum": 1000
        },
        "riskLevel": {
          "type": "string",
          "enum": ["low", "medium", "high"]
        },
        "badgeCount": {
          "type": "integer",
          "minimum": 0
        },
        "onchainActivity": {
          "type": "integer",
          "minimum": 0
        },
        "issuedAt": {
          "type": "integer"
        },
        "expiresAt": {
          "type": "integer"
        }
      }
    }
  }
}
